<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DisplayClubActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewJoinedClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:text="You Joined this club!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewClubLogoIMG"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/green_club_logo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewJoinedClub" />

    <TextView
        android:id="@+id/textViewClubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Swinburne Green Club"
        android:textAlignment="center"
        android:textColor="@color/dark_black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewClubLogoIMG" />



    <TextView
        android:id="@+id/textViewClubAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="About us: "
        android:textColor="@color/dark_black"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewClubName" />

    <TextView
        android:id="@+id/textViewClubAboutDetail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="test..."
        android:textColor="@color/dark_black"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textViewClubAbout"
        app:layout_constraintTop_toBottomOf="@+id/textViewClubAbout" />


    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:backgroundTint="@color/light_blue"
        android:padding="5dp"
        android:text="Recreatinal"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/dark_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewClubAboutDetail"
        app:layout_constraintTop_toBottomOf="@+id/textViewClubAboutDetail" />

    <TextView
        android:id="@+id/textViewSubscriptionMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:backgroundTint="@color/light_blue"
        android:padding="5dp"
        android:text="Sem"
        android:textAlignment="center"
        android:textColor="@color/dark_black"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCategory"
        app:layout_constraintStart_toEndOf="@+id/textViewCategory"
        app:layout_constraintTop_toTopOf="@+id/textViewCategory" />

    <TextView
        android:id="@+id/textViewMembershipFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:backgroundTint="@color/light_blue"
        android:padding="5dp"
        android:text="10"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSubscriptionMethod"
        app:layout_constraintStart_toEndOf="@+id/textViewSubscriptionMethod"
        app:layout_constraintTop_toTopOf="@+id/textViewSubscriptionMethod"
        app:drawableLeftCompat="@drawable/ic_baseline_attach_money_24"
        android:layout_marginLeft="10dp"/>



    <TextView
        android:id="@+id/textViewClubEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Club Email: "
        android:textColor="@color/dark_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewCategory" />

    <TextView
        android:id="@+id/textViewClubEmailDetail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="adad@gmail.com"
        android:textColor="@color/dark_black"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewClubEmail"
        app:layout_constraintStart_toEndOf="@+id/textViewClubEmail"
        app:layout_constraintTop_toTopOf="@+id/textViewClubEmail" />

    <TextView
        android:id="@+id/textViewAdvisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Advisor: test"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/textViewClubEmail"
        app:layout_constraintTop_toBottomOf="@+id/textViewClubEmail" />

    <TextView
        android:id="@+id/textViewPresident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="President: test"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/textViewAdvisor"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdvisor" />

    <TextView
        android:id="@+id/textViewVicePresident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Vice President: test"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/textViewPresident"
        app:layout_constraintTop_toBottomOf="@+id/textViewPresident" />

    <TextView
        android:id="@+id/textViewSecretary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Secretary: test"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/textViewVicePresident"
        app:layout_constraintTop_toBottomOf="@+id/textViewVicePresident" />

    <TextView
        android:id="@+id/textViewTreasurer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="Treasurer: test"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/textViewSecretary"
        app:layout_constraintTop_toBottomOf="@+id/textViewSecretary" />

    <TextView
        android:id="@+id/textViewSeeEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to see all the events!"
        android:textColor="@color/light_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTreasurer" />

    <Button
        android:id="@+id/buttonJoinClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Us!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSeeEvent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAllCaps="false"/>


    <!--        <Button-->
    <!--            android:id="@+id/button2"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:text="Button"-->
    <!--            tools:layout_editor_absoluteX="118dp"-->
    <!--            tools:layout_editor_absoluteY="651dp" />-->


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
