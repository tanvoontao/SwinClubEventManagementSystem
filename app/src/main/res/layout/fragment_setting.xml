<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/frameLayout5"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/grey"
tools:context=".Fragments.SettingFragment"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_add_event">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--edit text for course name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idTILStdEmail"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Student Email"
            android:padding="5dp"
            android:textColorHint="@color/dark_black"
            app:hintTextColor="@color/dark_black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idEdtStdEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textImeMultiLine|textMultiLine"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--edit text for course price-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idTILStdName"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Student Name"
            android:padding="5dp"
            android:textColorHint="@color/dark_black"
            app:boxStrokeColor="@color/dark_black"
            app:hintTextColor="@color/dark_black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idEdtStdName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textImeMultiLine|textMultiLine"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_black"
                android:textSize="14sp"
                app:boxStrokeColor="@color/dark_black" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--edit text for course image link-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idTILStdGEmail"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter General Email"
            android:padding="5dp"
            android:textColorHint="@color/dark_black"
            app:hintTextColor="@color/dark_black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idEdtStdGEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textImeMultiLine|textMultiLine"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/editTextDob"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/calendar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/dark_black"
            android:inputType="date"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="Event Dob"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idTILStdProfile"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Profile IMG Link"
            android:padding="5dp"
            android:textColorHint="@color/dark_black"
            app:hintTextColor="@color/dark_black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idEdtStdProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textImeMultiLine|textMultiLine"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idTILStdPhoneNo"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Contact Number"

            android:padding="5dp"
            android:textColorHint="@color/dark_black"
            app:hintTextColor="@color/dark_black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idEdtStdPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textImeMultiLine|textMultiLine"
                android:textColor="@color/dark_black"
                android:textColorHint="@color/dark_black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--button for adding a new course-->
        <Button
            android:id="@+id/addEventButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="100dp"
            android:text="Update profile!"
            android:textAllCaps="false"
            />

    </LinearLayout>


</RelativeLayout>
</ScrollView>